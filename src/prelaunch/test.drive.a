!cpu 6502
!to "build/PRELAUNCH/TEST.DRIVE",plain
*=$106

    !source "src/prelaunch/common.a"

         +GET_MACHINE_STATUS
         and   #CHEATS_ENABLED
         beq   +
         lda   #$60
         sta   $A0A
+        jsr   $800       ; load "DOS"
         lda   #$4C
         sta   $F858
         lda   #<callback1
         sta   $F859
         lda   #>callback2
         sta   $F85A
         jmp   $F800

callback1
         lda   #<callback2
         sta   $D039
         lda   #>callback2
         sta   $D03A
         jmp   $D000

callback2
         jsr   $E4FC
         lda   #$A5
         sta   $8213      ; patch - don't decrease lives
         rts

!if * > $1C0 {
  !error "code is too large, ends at ", *
}
