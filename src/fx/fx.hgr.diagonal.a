!cpu 6502
!to "build/FX/DIAGONAL",plain
*=$6000

         lda   #$27
         sta   $FB
         lda   #$2F
         sta   $FA
         sta   $FC
@loop    lda   $FA
         bpl   +
         lda   #$00
+        ldy   $FB
         jsr   HGRHalfBlockCopy
         dec   $FB
         inc   $FA
         lda   $FB
         bmi   +
         lda   $FA
         cmp   #$30
         bne   @loop
+        dec   $FC
         lda   #$27
         sta   $FB
         lda   $FC
         sta   $FA
         bpl   @loop
         lda   $C000
         bmi   @exit
         lda   #$00
         sta   $FA
         sec
         sbc   $FC
         sta   $FD
         lda   $FB
         sec
         sbc   $FD
         sta   $FB
         bpl   @loop
@exit    rts

         !source "src/fx/fx.hgr.common.a"
