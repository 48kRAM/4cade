!cpu 6502
!to "build/FX/RADIAL",plain
*=$6000

coord = $FE

         lda   #<@coords
         sta   coord
         lda   #>@coords
         sta   coord+1
         ldy   #0
@loop
         lda   (coord),y
         bpl   @copy
         lda   #$6
         jsr   WaitForKeyWithTimeout
         bmi   @exit
         bpl   @next                 ; always branches
@copy
         tax
         iny
         lda   (coord),y
         tay
         txa
         jsr   HGRHalfBlockCopy
@next
         inc   coord
         bne   +
         inc   coord+1
+        inc   coord
         bne   +
         inc   coord+1
+        ldy   #$00
         lda   ($FE),y
         cmp   #$80
         bne   @loop
@exit    rts

@coords
         !source "src/fx/fx.hgr.radial.data.a"
         !byte $80

         !source "src/wait.a"
         !source "src/fx/fx.hgr.common.a"
