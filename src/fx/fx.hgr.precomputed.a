coord = $FE

         jmp   Start

         !source "src/wait.a"
         !source "src/fx/fx.hgr.common.a"

Start

!macro FX_PRECOMPUTED .wait {
         lda   #<@coords
         sta   coord
         lda   #>@coords
         sta   coord+1
         ldy   #0
@loop
         lda   (coord),y
         bpl   +
         lda   #.wait
         jsr   WaitForKeyWithTimeout
         bmi   @exit
         bpl   @next
+        tax
         iny
         lda   (coord),y
         tay
         txa
         jsr   HGRHalfBlockCopy
@next
         inc   coord
         bne   +
         inc   coord+1
+        inc   coord
         bne   +
         inc   coord+1
+        ldy   #$00
         lda   ($FE),y
         cmp   #$80
         bne   @loop
@exit    rts

@coords
}
